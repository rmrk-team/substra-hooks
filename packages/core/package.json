{
  "name": "@substra-hooks/core",
  "version": "0.0.20",
  "main": "dist/cjs/src/index.js",
  "module": "dist/esm/src/index.js",
  "types": "dist/esm/src/index.d.ts",
  "repository": "git@github.com:rmrk-team/substra-hooks.git",
  "author": "RMRK",
  "license": "MIT",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "yarn run build:esm && yarn run build:cjs",
    "build:esm": "tsc --module es2020 --target es2017 --outDir dist/esm",
    "build:cjs": "tsc --outDir dist/cjs",
    "test": "jest --forceExit --runInBand",
    "test:watch": "jest --watch",
    "lint": "yarn lint:prettier --check && yarn lint:eslint",
    "lint:fix": "yarn lint:prettier --write && yarn lint:eslint --fix",
    "lint:eslint": "eslint './{src,test}/**/*.{ts,tsx}'",
    "lint:prettier": "yarn prettier './{src,test}/**/*.{ts,tsx}'"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/plugin-proposal-optional-chaining": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-typescript": "^7.13.0",
    "@polkadot/api": "^6.7.1",
    "@polkadot/extension-dapp": "^0.41.1",
    "@polkadot/keyring": "^7.8.2",
    "@polkadot/util": "^7.8.2",
    "@polkadot/util-crypto": "^7.8.2",
    "@types/jest": "^27.0.2",
    "@types/ramda": "^0.27.46",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "babel-jest": "^27.3.1",
    "eslint": "8.1.0",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@types/react": "17.0.34",
    "nanoid": "3.1.30",
    "ramda": "^0.27.1"
  },
  "peerDependencies": {
    "@polkadot/api": ">=6.6.1",
    "@polkadot/extension-dapp": ">=0.40.4",
    "@polkadot/keyring": ">=7.7.1",
    "@polkadot/util": ">=7.7.1",
    "@polkadot/util-crypto": ">=7.7.1",
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2"
  }
}
